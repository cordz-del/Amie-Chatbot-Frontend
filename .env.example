# Application Configuration
VITE_APP_NAME=Amie Chatbot
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development # Options: development, staging, production

# API Security
VITE_API_TIMEOUT=30000 # API timeout in milliseconds
VITE_MAX_RETRIES=3 # Maximum API retry attempts
VITE_RATE_LIMIT=100 # Requests per minute

# Backend Configuration
VITE_BACKEND_URL=https://amie-chatbot-backend-raarongraham.replit.app
VITE_API_VERSION=v1
VITE_WEBSOCKET_URL=wss://amie-chatbot-backend-raarongraham.replit.app/ws

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
VITE_OPENAI_MODEL=gpt-3.5-turbo # Options: gpt-3.5-turbo, gpt-4
VITE_OPENAI_MAX_TOKENS=2048
VITE_OPENAI_TEMPERATURE=0.7
VITE_WHISPER_API_ENDPOINT=https://api.openai.com/v1/audio/transcriptions
VITE_WHISPER_MODEL=whisper-1

# ElevenLabs Configuration
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VITE_ELEVENLABS_VOICE_ID=your_voice_id_here
VITE_ELEVENLABS_API_ENDPOINT=https://api.elevenlabs.io/v1/text-to-speech
VITE_ELEVENLABS_MODEL=eleven_monolingual_v1
VITE_ELEVENLABS_STABILITY=0.5
VITE_ELEVENLABS_SIMILARITY=0.75

# Feature Flags
VITE_ENABLE_VOICE=true
VITE_ENABLE_CHAT_HISTORY=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics & Monitoring
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_LOG_LEVEL=info # Options: debug, info, warn, error

# Cache Configuration
VITE_CACHE_TTL=3600 # Cache time-to-live in seconds
VITE_MAX_CACHE_SIZE=100 # Maximum number of cached items

# UI Configuration
VITE_DEFAULT_THEME=light # Options: light, dark, system
VITE_DEFAULT_LANGUAGE=en # Options: en, es, fr
VITE_MAX_MESSAGE_LENGTH=1000
VITE_TYPING_SPEED=50 # Milliseconds per character

# Development Tools
VITE_ENABLE_DEVTOOLS=true # Enable development tools in non-production
VITE_MOCK_API=false # Use mock API responses
VITE_DEBUG_MODE=false # Enable detailed logging

# Important Notes:
# 1. Never commit actual API keys to version control
# 2. All VITE_ prefixed variables will be exposed to the client
# 3. Create a .env.local file for local development
# 4. Use different .env files for different environments (.env.production, .env.staging)
